<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

  </head>

  <body>
    <div id="slidemenu">
    <div class="container">
  <ul class="nav navbar-nav navbar-fixed-top" role="navigation" data-hover="dropdown" data-animations="zoomIn fadeIn fadeInUp fadeIn" style="background-color: black;" >

    <% if user_signed_in? %>

      <li class="">
        <%= link_to user_path(current_user.id) do %>
        <i class="glyphicon glyphicon-home" aria-hidden="true"></i>
        <span>Home</span>
        <% end %>
      </li>

      <li class="">
        <%= link_to users_path do %>
        <i class="glyphicon glyphicon-user" aria-hidden="true"></i>
        <span>Users</span>
        <% end %>
      </li>

      <li class="">
        <%= link_to books_path do %>
        <i class="glyphicon glyphicon-book" aria-hidden="true"></i>
        <span>Books</span>
        <% end %>
      </li>

      <li class="">
        <%= link_to destroy_user_session_path, method: :delete do %>
        <i class="glyphicon glyphicon-share" aria-hidden="true"></i>
        <span>logout</span>
        <% end %>
      </li>


      <% else %>

      <li class="">
        <%= link_to root_path do %>
        <i class="glyphicon glyphicon-home" aria-hidden="true"></i>
        <span>Home</span>
        <% end %>
      </li>

      <li class="">
        <%= link_to about_path do %>
        <i class="glyphicon glyphicon-link" aria-hidden="true"></i>
        <span>About</span>
        <% end %>
      </li>

      <li class="">
        <%= link_to new_user_registration_path do %>
        <i class="glyphicon glyphicon-edit" aria-hidden="true"></i>
        <span>sign up</span>
        <% end %>
      </li>

      <li class="">
        <%= link_to new_user_session_path do %>
        <i class="glyphicon glyphicon-log-in" aria-hidden="true"></i>
        <span>login</span>
       <% end %>
      </li>

    <% end %>
    </ul>
    </div>
  </div>
    <%= yield %>

    <footer>
      <p class="footer-text">CopyRight Infratop.inc</p>
     </footer>


  </body>
</html>