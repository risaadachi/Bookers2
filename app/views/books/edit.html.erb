<div class="container">
  <div class="row">
    <div class="col-3"></div>
    <div class="col-6">

<h2>Editing Book</h2>

<% if @book.errors.any? %>
    <div class = "error_explanation" class="alert alert-worning">
    	<ul>
    		<% @book.errors.full_messages.each do |message| %>
             <p>error!</p>
    		<li><%= message %></li>
    		<% end %>
    	</ul>
    </div>
<% end %>

<%=form_for(@book) do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Opinion</h4>
  <%= f.text_area :body %><br>

  <%=f.submit 'Update Book', class: 'btn btn-primary' %>
<% end %>

<span>
  <%= link_to "Show", :back %>
  <%= link_to "Back", books_path %>
</span>
<div class="col-3"></div>
</div>
</div>
</div>
