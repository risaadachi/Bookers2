<div class="container">
  <div class="row">
    <div class="col-sm-3">

<%= render 'temp/temp', user: current_user ,book: @book %>
</div>

    <div class="col-sm-9">

<h2>Books </h2>

<table class="table table-striped">
	<tr>
		<th>Title</th>
		<th>Opinion</th>
	</tr>
</table>

<% @books.each do |book| %>
<table class="table table-striped">
    <tr>
    	<td><span><%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, format: "img", fallback: "default.jpg", size: "60x60"  %></span></td>
    	<td><span><%= link_to "#{book.title}", book_path(book.id) %></span></td>
    	<td><span><%= book.body %></span></td>
    </tr>
</table>
<% end %>
</div>
</div>
</div>
