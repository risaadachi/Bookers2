
<h2>User info</h2>

<table class="table table-striped">
	<tr>
    <th><span><%= attachment_image_tag book.user, :profile_image, :fill, 100, 100, format: "img", fallback: "default.jpg", size: "100x100"  %></span></th>
  </tr>

  <tr>
    <th>name</th><th><%= user.name %></th>
  </tr>

	<tr>
    <th>introduction</th><th><%= user.introduction %></th></tr>
</table>

<%= link_to edit_user_path(user.id), class: 'btn btn-default btn-block' do %>
 <span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
<% end %>


<h2>New Book</h2>

<% if book.errors.any? %>
    <div class = "error_explanation" class="alert alert-worning">
    	<ul>
    		<% book.errors.full_messages.each do |message| %>
        <p>error!</p>
    		<li><%= message %></li>
    		<% end %>
    	</ul>
    </div>
<% end %>


<%= form_for(book) do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title, class: 'form-control' %>

  <h4>Opinion</h4>
  <%= f.text_area :body, class: 'form-control' %>

  <%= f.hidden_field :user_id, value: current_user.id %><br>

  <%= f.submit 'Create Book', class: 'btn btn-primary btn-block ' %>

<% end %>
