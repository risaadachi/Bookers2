<% if @user.errors.any? %>
    <div class = "error_explanation" class="alert alert-worning">
    	<ul>
    		<% @user.errors.full_messages.each do |message| %>
            <p>error!</p>
    		<li><%= message %></li>
    		<% end %>
    	</ul>
    </div>
<% end %>

<%= form_for(@user) do |f| %>
  <h4>Name</h4>
   <%= f.text_field :name, autofocus: true, class:"form-control", id:"inputEmail" %>

  <h4>Image</h4>
   <%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user-edit-form" %>

  <h4>Introduction</h4>
   <%= f.text_area :introduction %>

  <%= f.submit "Update User" %>
<% end %>
